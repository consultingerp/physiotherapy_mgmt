    <!--FORM-->
        <record model="ir.ui.view" id="res_partner_patient_data">
            <field name="name">res.partner.patient.data</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">

              <!--Physiotherapy Data-->
                <notebook position="inside">
                    <page name="physioterapy" string="Physioterapy">
                        <group>
                            <group>
                                <field name="physiotherapy_partner"/>
                                <field name="birth_date"/>
                                <field name="gender"/>
                                <field name="civil_state"/>
                                <field name="allergies"/>
                                <field name="style_of_life"/>
                                <field name="sport_practice"/>
                                <field name="sport_id"/>
                                <field name="sport_periodicity"/>
                            </group>
                            <group>
                                <field name="personal_history_id"/>
                                <field name="familiar_history_id"/>
                            </group>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>

